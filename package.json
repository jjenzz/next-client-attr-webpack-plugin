{
  "private": true,
  "license": "MIT",
  "author": {
    "name": "jjenzz",
    "email": "175330+jjenzz@users.noreply.github.com"
  },
  "scripts": {
    "postinstall": "pnpm build",
    "build": "pnpm --filter=\"next-client-attr-webpack-plugin\" build",
    "dev": "pnpm --filter=\"example\" dev",
    "clean": "pnpm exec rm -rf **/dist **/node_modules node_modules",
    "test": "pnpm --filter=\"next-client-attr-webpack-plugin\" test",
    "typecheck": "pnpm -r typecheck",
    "release": "auto shipit"
  },
  "devDependencies": {
    "@auto-it/magic-zero": "^11.3.0",
    "auto": "^11.3.0",
    "lerna": "^8.1.9",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "pnpm": ">= 8",
    "node": ">= 18"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "auto": {
    "noDefaultLabels": true,
    "plugins": [
      "released",
      [
        "magic-zero",
        {
          "label": "alpha"
        }
      ],
      [
        "npm",
        {
          "subPackageChangelogs": false,
          "monorepoChangelog": false,
          "commitNextVersion": true
        }
      ]
    ],
    "labels": [
      {
        "name": "alpha",
        "description": "Graduate to the next left 0 digit",
        "releaseType": "major",
        "color": "#5D7DF9"
      },
      {
        "name": "major",
        "changelogTitle": "üí• Breaking Change",
        "description": "Increment the major version when merged",
        "releaseType": "major",
        "color": "#C5000B"
      },
      {
        "name": "minor",
        "changelogTitle": "üöÄ Enhancement",
        "description": "Increment the minor version when merged",
        "releaseType": "minor",
        "color": "#F1A60E"
      },
      {
        "name": "patch",
        "changelogTitle": "üêõ Bug Fix",
        "description": "Increment the patch version when merged",
        "releaseType": "patch",
        "color": "#870048"
      },
      {
        "name": "skip-release",
        "description": "Preserve the current version when merged",
        "releaseType": "skip",
        "color": "#bf5416"
      },
      {
        "name": "chore",
        "changelogTitle": "üè† Housekeeping",
        "description": "Internal maintenance, no versioning required",
        "releaseType": "none",
        "color": "#696969"
      },
      {
        "name": "docs",
        "changelogTitle": "üìù Documentation",
        "description": "Docs changes, no versioning required",
        "releaseType": "none",
        "color": "#cfd3d7"
      },
      {
        "name": "performance",
        "changelogTitle": "üèé Performance",
        "description": "Improve performance of an existing feature",
        "releaseType": "patch",
        "color": "#f4b2d8"
      }
    ]
  }
}
